#!/usr/bin/env node

var program = require('commander');

var create = require('../lib/create');
var preview = require('../lib/preview');
var check = require('../lib/check');
var build = require('../lib/build');
var publish = require('../lib/publish');

program
    .version('0.0.1')
    .description('基于san(MVVM framework)的组件库cli工具')
    .option('-c, --create <component-name>', '创建项目脚手架', create)
    .option('-v, --view <component-name>', '组件效果预览', preview)
    .option('-t, --test <component-name>', '组件规范检查', check)
    .option('-b, --build <component-name>', '组件打包构建', build)
    .option('-p, --publish <component-name>', '组件发布上线', publish)
    .parse(process.argv);
